{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Auth service",
    "description": "Service for CRUD user and authorization flow",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:9000",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/user/all": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get all users in system",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create new user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/NewUser"
              },
              "required": true
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Update user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/UpdateUser"
              },
              "required": true
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Delete user from system",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user/verify": {
      "post": {
        "tags": ["Auth"],
        "description": "Validate user token",
        "summary": "Validate user token",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Token is valid",
            "schema": {
              "required": ["userId"],
              "properties": {
                "userId": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/authenticate": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Authenticate user with credential",
        "summary": "Authenticate user with username and password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "required": true
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is authenticated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "id",
        "username",
        "password"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "username": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "level": {
          "type": "string"
        },
        "votes": {
          "type": "number"
        },
        "age": {
          "type": "number"
        }
      }
    },
    "NewUser": {
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "level": {
          "type": "string"
        },
        "votes": {
          "type": "number"
        },
        "age": {
          "type": "number"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "UpdateUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "level": {
          "type": "string"
        },
        "votes": {
          "type": "number"
        },
        "age": {
          "type": "number"
        }
      }
    },
    "UserCredentials": {
      "type": "object",
      "required": ["password", "username"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
