{
  "name": "node-authorization-api",
  "version": "1.0.0",
  "description": "Node.js Authorization API",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "build": "bash scripts/build.sh",
    "docker:auth:dev": "nodemon src/index-dev.js",
    "launch:dev": "bash scripts/launch-dev.sh",
    "ci:build": "bash scripts/build-prod.sh"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "cors": "^2.8.5",
    "env-cmd": "^10.0.1",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.7.8",
    "mongoose-unique-validator": "^2.0.3",
    "node-mongodb-fixtures": "^3.0.8",
    "rootpath": "^0.1.2",
    "swagger-ui-express": "^4.1.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-proposal-decorators": "7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.1",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.3.1",
    "@babel/register": "7.0.0",
    "@babel/runtime": "7.3.1",
    "babel-eslint": "8.2.1",
    "babel-loader": "8",
    "babel-plugin-module-resolver": "3.1.0",
    "copy-webpack-plugin": "^5.0.5",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.18.6",
    "source-map-loader": "0.2.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "package.json": "./package.json"
          }
        }
      ]
    ]
  }
}
