{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Posts service",
    "description": "Service for CRUD posts",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:9010",
  "tags": [
    {
      "name": "Posts",
      "description": "API for posts in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/posts": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get all posts in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "Create new post in system",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/NewPost"
              },
              "required": true
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "Posts": {
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string",
          "uniqueItems": true
        },
        "article": {
          "type": "string"
        },
        "postCover": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "likes": {
          "scheme": {
            "$ref": "#/definitions/Likes"
          }
        },
        "author": {
          "type": "string"
        }
      }
    },
    "Likes": {
      "properties": {
        "count": {
          "type": "number"
        },
        "voters": {
          "type": "array",
          "items": "string"
        }
      }
    },
    "NewPost": {
      "required": [
        "title",
        "article",
        "description"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "article": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "postCover": {
          "type": "string"
        }
      }
    }
  }
}
